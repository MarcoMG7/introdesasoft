#include <stdio.h>
int main ()
{
    int i=1,c=0,n;
    printf("ingresa un numero\n");
    scanf("%i",&n);
    
    do{
        if (n%i==0){
            c++;
        }
        i++;
    }while(i<=n);

if (c==2){
    printf("el numero %i es primo\n",n);
}
else{
    printf("el numero %i no es primo\n",n);
}
    return 0;
}
